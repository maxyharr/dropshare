%header.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container
      = link_to "Dropshare", '/', id: "logo"
      %nav
        %ul.nav.pull-right
          %li= link_to "Home", root_path, id: "home"
          %li= link_to "Help", '/help', id: "help"
          - if current_user
            %li= link_to "Sign out", signout_path
            %li= link_to current_user.name, user_path(current_user.id), id: "wall_link"