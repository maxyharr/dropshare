<div>
<h1>Friend's Activites</h1>
<h2>Welcome <%= current_user.name %> </h2>

<div id="sidebar">
  <h2>DropShare Friends</h2>
  <% @friends.each do |friend| %>
    <%= image_tag friend.picture %>
    <%= link_to friend.name, user_path(User.find_by_uid(friend.identifier)) %>
    <br/>
  <% end %>
</div>

<div id="main">
<% @activities.each do |activity| %>
  <div class="activity">
    <% if activity.owner && activity.owner.name != current_user.name %>
      <%= link_to activity.owner.name, activity.owner if activity.owner %>
    <% elsif activity.owner %>
      You
    <% end %>  
    <%= render_activity activity %>
  </div>
<% end %>
</div>
</div>


